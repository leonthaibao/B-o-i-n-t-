{{#section 'css'}}
<link rel="stylesheet" href="/css/stylesignup.css" type="text/css">
{{/section}}
{{#section 'js'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>

<script>
  $(function () {


    $('#forgetForm').validate({
      rules: {
        old: {
          required: true,
          remote: {
			  url: '/account/is-crrpassword'
		  }
        },
        new: {
          required: true,
          minlength: 6
        },
        confirm: {
          required: true,
          equalTo: $('[name="new"]')
        },
      },
      messages: {
        old: {
          required: 'Your old is required.',
          remote: 'Wrong password. '
        },
        new: {
          required: 'Your new password is required.',
          minlength: 'Your new password must have at least 6 characters.'
        },
        confirm: {
          required: 'Your password does not match.',
          equalTo: 'Your password does not match.'
        },
      },
      errorElement: 'small',
      errorClass: 'help-block text-danger',
      highlight: function (e) {
        $(e).removeClass('is-valid').addClass('is-invalid');
      },
      unhighlight: function (e) {
        $(e).removeClass('is-invalid').addClass('is-valid');
      }
    });
  })
</script>

{{/section}}

<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card border-secondary">
                        <div class="card-header">
                            <h3 class="mb-0 my-2">Quên mật khẩu</h3>
                        </div>
                        <div class="card-body">
                            <form novalidate action="" method="POST" id="forgetForm">
                                <div class="form-group">
                                    <label for="inputPassword3">Mật khẩu cũ</label>
                                    <input type="password" name="old" class="form-control" id="inputPassword3" placeholder="password" title="">
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword3">Mật khẩu mới</label>
                                    <input type="password" name="new" class="form-control" id="inputPassword3" placeholder="password" title="">
                                </div>
                                <div class="form-group">
                                    <label for="inputVerify3">Nhập lại mật khẩu</label>
                                    <input type="password" name="confirm" class="form-control" id="inputVerify3" placeholder="password (again)" >
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success btn-lg float-right">Cập nhật</button>
                                </div>
								
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!--/row-->

        </div>
        <!--/col-->
    </div>
    <!--/row-->
    </div>
    <!--/container-->