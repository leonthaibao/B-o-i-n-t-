            <div class="carousel-item active">
        {{else}}
            <div class="carousel-item">
        {{/if}}
        
        <img src="img/{{postAnhTieuDe}}" class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block" id="tieude">
