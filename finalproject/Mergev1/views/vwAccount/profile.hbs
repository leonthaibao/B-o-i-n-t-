{{#section 'css'}}
<link rel="stylesheet" href="/css/stylesignup.css" type="text/css">
{{/section}}

{{#section 'js'}}
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
<script>
  $(function () {

 	$('#txtDOB').datetimepicker({
      format: 'd/m/Y',
      timepicker: false,
      mask: true,
    });

    $('#registerForm').validate({
      rules: {
        emails: {
          required: true,
          email: true
        },
        dob: {
          required: true
        },
      },
      messages: {
        emails: {
          required: 'Please enter a valid email address.',
          email: 'Please enter a valid email address.'
        },
        dob: {
          required: 'Valid date of birth is required.',
        },
      },
      errorElement: 'small',
      errorClass: 'help-block text-danger',
      highlight: function (e) {
        $(e).removeClass('is-valid').addClass('is-invalid');
      },
      unhighlight: function (e) {
        $(e).removeClass('is-invalid').addClass('is-valid');
      }
    });
  })
</script>
{{/section}}

 <div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center mb-5">Đổi thông tin</h2>
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card border-secondary">
                        <div class="card-header">
                            <h3 class="mb-0 my-2">Thông tin tài khoản</h3>
                        </div>
                        <div class="card-body">
                            <form novalidate action="" method="POST" id="registerForm">
                                <div class="form-group">
                                    <label for="inputName">Tên tài khoản</label>
                                    <input type="text" readonly name="username"class="form-control" id="inputName" placeholder="full name"  value="{{this.user.Username}}">
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail3">Email</label>
                                    <input type="text" name="emails" class="form-control" id="inputEmail3" placeholder="email@gmail.com" autofocus value="{{this.user.Email}}" >
                                </div>
								 <div class="form-group">
									<label for="txtDOB">Date of birth</label>
									<input type="text" class="form-control" id="txtDOB" name="dob" value="{{this.user.BDay}}">
								</div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success btn-lg float-right">Cập nhật</button>
                                </div>
								
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!--/row-->

        </div>
        <!--/col-->
    </div>
    <!--/row-->
    </div>
    <!--/container-->

