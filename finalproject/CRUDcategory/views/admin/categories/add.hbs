<div class="card">
  <h5 class="card-header">Thêm chuyên mục</h5>
  <div class="card-body">
        <form method="POST">
            <div class="form-group">
                <label for="inputCategoryName">Tên chuyên mục</label>
                <input type="text"  required="required" class="form-control" id="inputCategoryName" name="inputcateName" aria-describedby="emailHelp" autofocus placeholder="Tên chuyên mục">
            </div>
            <div class="form-group">
                <label for="inputPostCounter">Số bài viết</label>
                <input type="number"  required="required" class="form-control" id="inputPostCounter" name="inputpostCounter" placeholder="Số bài viêt">
            </div>
            <div class="form-group">
                <label for="inputCategoryLink">Link</label>
                <input type="text"  required="required" class="form-control" id="inputCategoryLink" name="inputcateLink" placeholder="link..">
            </div>
            <div class="form-group d-flex justify-content-between">
                <button type="submit" class="btn btn-success"><i class="fas fa-check"></i>&nbsp; Thêm</button>
                <a role="button" href="/admin/categories" class="btn btn-primary"><i class="fas fa-arrow-left"></i>&nbsp; Trở lại</a>
            </div>
        </form>
  </div>
</div>