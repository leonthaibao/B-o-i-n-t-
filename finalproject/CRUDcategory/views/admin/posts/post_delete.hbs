<div class="card">
  <h5 class="card-header">Xóa bài viết</h5>
  {{#if this.error}}
        <div class="alert alert-warning" role="alert">
            Invalid postID, Try again@@@@@@@@@@@@@@
        </div>
  {{else}}
    <div class="card-body">
            <div class="alert alert-warning" role="alert">
                Bạn có muốn xóa nội dung bên dưới
            </div>
            <form method="POST" action="/admin/posts/delete">
            <div class="form-group">
                    <label for="inputID">ID chuyên mục</label>
                    <input readonly type="text" required="required" class="form-control" id="inputID" name="inputpostID" aria-describedby="emailHelp" autofocus placeholder="ID tag" value="{{this.post.postID}}">
                </div>
                <div class="form-group">
                    <label for="inputName">Tên chuyên mục</label>
                    <input readonly type="text" required="required" class="form-control" id="inputName" name="inputpostName" aria-describedby="emailHelp" autofocus placeholder="Tên tag" value="{{this.post.postName}}">
                </div>
                <div class="form-group">
                    <label for="inputSoBaiViet">Tình trạng</label>
                    <input readonly type="text" required="required" class="form-control" id="inputStatus" name="inputpostStatus" placeholder="Số bài viêt"  value="{{this.post.postStatus}}">
                </div>
                <div class="form-group">
                    <label for="inputLink">Link</label>
                    <input readonly type="text" required="required" class="form-control" id="inputLink" name="inputpostLink" placeholder="link.."  value="{{this.post.postLink}}">
                </div>
                <div class="form-group d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger"><i class="fas fa-check"></i>&nbsp; Xóa</button>
                    <a role="button" href="/admin/posts" class="btn btn-primary"><i class="fas fa-arrow-left"></i>&nbsp; Trở lại</a>
                </div>
            </form>
    </div>
  {{/if}}
</div>